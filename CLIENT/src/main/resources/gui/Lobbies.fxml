<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          xmlns="http://javafx.com/javafx"
          fx:controller="gui.LobbiesController"
          prefHeight="500.0" prefWidth="800.0"
          alignment="center" hgap="10" vgap="10">
    <ListView fx:id="listView" GridPane.columnIndex="0" GridPane.rowIndex="1">

    </ListView>
    <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="2" alignment="CENTER">
        <Button text="Refresh" fx:id="refreshButton"
                onAction="#handleRefreshAction"/>
        <Button text="Create Lobby"
                onAction="#handleCreateLobbyAction"/>
    </HBox>
</GridPane>
